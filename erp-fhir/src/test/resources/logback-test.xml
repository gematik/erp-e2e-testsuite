<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration>

<configuration>
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <variable name="date_format" value="%d{HH:mm:ss.SSS}"/>

    <appender name="STDOUT" class="ConsoleAppender">
        <encoder class="PatternLayoutEncoder">
            <pattern>${date_format} %highlight(%-5level) %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de.gematik" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

<!--    Note: these are useful for analyzing the validator-->
     <logger name="de.gematik.bbriccs.fhir.validation.support" level="INFO" additivity="false">
<!--    <logger name="de.gematik.bbriccs.fhir.validation" level="INFO" additivity="false">-->
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="ca.uhn.fhir" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
<!--    <logger name="ca.uhn.fhir.log.terminology_troubleshooting" level="TRACE" additivity="false">-->
<!--        <appender-ref ref="STDOUT"/>-->
<!--    </logger>-->
    <logger name="org.hl7.fhir.common.hapi.validation.validator" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>